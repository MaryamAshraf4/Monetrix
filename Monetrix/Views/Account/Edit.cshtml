@using Monetrix.Enums
@model Monetrix.Models.Account

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card shadow-lg bank-card">
        <div class="card-header-custom d-flex justify-content-center align-items-center rounded-top">
            <span>Edit Account</span>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="AccountId" />
                <input type="hidden" asp-for="CustomerId" />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="Balance" class="form-label"></label>
                    <input asp-for="Balance" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="AccountNumber" class="form-label"></label>
                    <input asp-for="AccountNumber" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="AccountType" class="form-label"></label>
                    <select asp-for="AccountType" asp-items="Html.GetEnumSelectList<AccountType>()" class="form-control">
                        <option value="">-- Select Account Type --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedDate" class="form-label"></label>
                    <input asp-for="CreatedDate" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="CloseDate" class="form-label"></label>
                    <input asp-for="CloseDate" class="form-control" />
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2 px-4">Save</button>
                    <a asp-action="Details" asp-controller="Account" asp-route-id="@Model.AccountId" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
