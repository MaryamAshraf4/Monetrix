@model IEnumerable<Monetrix.Models.Account>

@{
    ViewData["Title"] = "Index";
}
@if (Model != null && Model.Any())
{

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CloseDate)
            </th>   
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            @if(item.CloseDate != null){
            <td>
                @Html.DisplayFor(modelItem => item.CloseDate)
            </td>
            }
            else{
                <td>Running</td>
            }
            <td>
                    <a asp-action="Details" asp-route-id="@item.AccountId" asp-route-returnUrl="@Url.Action("Index", "Account")" title="Details">
                        <img src="~/Icons/research.png" alt="Details" style="width:50px; height:50px;">
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else{

<div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
        <p class="gold-outline-text" style="font-size: 2rem; font-weight: bold; color: white;">No accounts found</p>
</div>

}