@using Monetrix.Enums
@model Monetrix.Models.Account

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-lg bank-card">
        <div class="card-header-custom d-flex justify-content-center align-items-center rounded-top">
            <span>New Account</span>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <input type="hidden" asp-for="CustomerId" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive"></label>
                        </div>
                    </div>

                    <div class="col-12">
                        <label asp-for="Balance" class="form-label"></label>
                        <input asp-for="Balance" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label asp-for="AccountNumber" class="form-label"></label>
                        <input asp-for="AccountNumber" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label asp-for="AccountType" class="form-label"></label>
                        <select asp-for="AccountType" asp-items="Html.GetEnumSelectList<AccountType>()" class="form-control">
                            <option value="">-- Select Account Type --</option>
                        </select>
                    </div>

                    <div class="col-12">
                        <label asp-for="CreatedDate" class="form-label"></label>
                        <input asp-for="CreatedDate" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label asp-for="CloseDate" class="form-label"></label>
                        <input asp-for="CloseDate" class="form-control" />
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary me-2 px-4">Create</button>
                    <a asp-action="Details" asp-controller="Customer" asp-route-id="@Model.CustomerId" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
