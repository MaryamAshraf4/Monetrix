@using Monetrix.Enums
@model Monetrix.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-lg bank-card">
        <div class="card-header-custom d-flex justify-content-center align-items-center rounded-top">
            <span>New Customer</span>
        </div>

        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NationalId" class="form-label"></label>
                            <input asp-for="NationalId" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Age" class="form-label"></label>
                            <input asp-for="Age" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Gender" class="form-label"></label>
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageFile" class="form-label">Photo</label>
                            <input asp-for="ImageFile" type="file" class="form-control" onchange="loadFile(event)" />
                            <img id="preview" src="#" alt="Preview" style="max-height: 150px; margin-top: 10px; display: none;" class="rounded shadow-sm" />
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary me-2 px-4">Create</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        var loadFile = function (event) {
            var preview = document.getElementById('preview');
            preview.src = URL.createObjectURL(event.target.files[0]);
            preview.style.display = 'block';
        };
    </script>
}
