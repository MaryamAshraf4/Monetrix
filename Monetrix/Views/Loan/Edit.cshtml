@using Monetrix.Enums
@model Monetrix.Models.Loan

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow-lg rounded-4">

    <div class="card-header-custom d-flex justify-content-center align-items-center rounded-top">
        <h4 class="mb-0">Edit Loan</h4>
    </div>

    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="LoanId" />
            <input type="hidden" asp-for="CustomerId" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <input asp-for="Amount" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="InterestRate" class="form-label"></label>
                    <input asp-for="InterestRate" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<LoanStatus>()" class="form-control">
                        <option value="">-- Select Status --</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Purpose" class="form-label"></label>
                    <input asp-for="Purpose" class="form-control" />
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <input type="submit" value="Save" class="btn btn-primary me-2" />
                <a asp-action="Details" asp-route-id="@Model.LoanId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
