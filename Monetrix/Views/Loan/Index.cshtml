@model IEnumerable<Monetrix.Models.Loan>

@{
    ViewData["Title"] = "Index";
}
@if (Model != null && Model.Any()){
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purpose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Purpose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.FullName)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.LoanId" asp-route-returnUrl="@Url.Action("Index", "Loan")" title="Details">
                        <img src="~/Icons/research.png" alt="Details" style="width:50px; height:50px;">
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
        <p class="gold-outline-text" style="font-size: 2rem; font-weight: bold; color: white;">No loans found</p>
    </div>
}
