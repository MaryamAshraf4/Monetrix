@model Monetrix.Models.AppUser
@using Monetrix.Enums

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="NationalId"></label>
                <input asp-for="NationalId" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Position"></label>
                <select asp-for="Position" asp-items="Html.GetEnumSelectList<JobPosition>()" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="HireDate"></label>
                <input asp-for="HireDate" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}