@model Monetrix.Models.AppUser
@using Monetrix.Enums

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card shadow-lg bank-card">
        <div class="card-header-custom d-flex justify-content-center align-items-center rounded-top">
            <h5>Edit User</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-3">

                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NationalId" class="form-label"></label>
                        <input asp-for="NationalId" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Position" class="form-label"></label>
                        <select asp-for="Position" asp-items="Html.GetEnumSelectList<JobPosition>()" class="form-control"></select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Salary" class="form-label"></label>
                        <input asp-for="Salary" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HireDate" class="form-label"></label>
                        <input asp-for="HireDate" type="date" class="form-control" />
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2 px-4">Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
