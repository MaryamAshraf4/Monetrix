@model Monetrix.Models.AppUser
@{
    ViewData["Title"] = "Employee Details";
}

<div class="container card-body mt-4">
    <div class="bank-card shadow rounded-3 overflow-hidden">
        
        <div class="section-header justify-content-center align-items-center">
            <span>Employee Details</span>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Model.FullName</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">National ID</dt>
                <dd class="col-sm-8">@Model.NationalId</dd>

                <dt class="col-sm-4">Position</dt>
                <dd class="col-sm-8">@Model.Position</dd>

                <dt class="col-sm-4">Salary</dt>
                <dd class="col-sm-8">@Model.Salary</dd>

                <dt class="col-sm-4">Hire Date</dt>
                <dd class="col-sm-8">@Model.HireDate.ToString("yyyy-MM-dd")</dd>
            </dl>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
